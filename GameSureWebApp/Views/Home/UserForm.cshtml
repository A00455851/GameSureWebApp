
@model GameSureWebApp.Models.ViewModels.UserForm

@{
    ViewData["Title"] = "User Details";
}
@using (Html.BeginForm("UserPreview", "UserDet", FormMethod.Post))


{<div class="flex-column p-2 align-items-center">
        <h1 class="">Customer Details</h1>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="FirstName">First Name</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" name="FirstName" aria-describedby="FirstName" placeholder="First Name" value="@Html.DisplayFor(model => model.FirstName)">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="LastName">Last Name</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" name="LastName" aria-describedby="LastName" placeholder="Last Name" value="@Html.DisplayFor(model => model.LastName)">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="EmailId">Email address</label>
            </div>
            <div class="col-5">
                <input type="email" class="form-control" name="EmailId" aria-describedby="EmailId" placeholder="Enter email" value="@Html.DisplayFor(model => model.EmailId)">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="Phone">Phone Number</label>
            </div>
            <div class="col-5">
                <input type="number" class="form-control" name="Phone" aria-describedby="Phone" placeholder="Phone Number" value="@Html.DisplayFor(model => model.Phone)">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="Addr1">Address Line 1</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" name="Addr1" aria-describedby="Addr1" placeholder="Address Line 1" value="@Html.DisplayFor(model => model.Addr1)">
            </div>
        </div>
    </div><div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="Addr2">Address Line 2</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" name="Addr2" aria-describedby="Addr2" placeholder="Address Line 2" value="@Html.DisplayFor(model => model.Addr2)">
            </div>
        </div>
    </div><div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="City">City</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" name="City" aria-describedby="City" placeholder="City" value="@Html.DisplayFor(model => model.City)">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="Province">Province/State</label>
            </div>
            <div class="col-5">
                <select asp-items="Html.GetEnumSelectList<Province>() " class="form-control" name="Province" aria-describedby="Province" placeholder="Province/State" value="@Html.DisplayFor(model => model.Province)"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="Country">Country</label>
            </div>
            <div class="col-5">
                <select asp-items="Html.GetEnumSelectList<Country>() " class="form-control" name="Country-describedby=" Country placeholder="Province/State" value="@Html.DisplayFor(model => model.Country)"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="ZipCode">ZipCode</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" name="ZipCode" aria-describedby="ZipCode" placeholder="ZipCode" value="@Html.DisplayFor(model => model.ZipCode)">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="StartDate">Policy Start Date</label>
            </div>
            <div class="col-5">
                <input type="date" class="form-control" name="StartDate" aria-describedby="StartDate" placeholder="Policy Start Date" value="@Html.DisplayFor(model => model.StartDate)">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                <label for="EndDate">Policy End Date</label>
            </div>
            <div class="col-5">
                <input type="date" class="form-control" name="EndDate" aria-describedby="EndDate" placeholder="Policy End Date" value="@Html.DisplayFor(model => model.EndDate)">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
}
